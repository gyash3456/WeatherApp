<!DOCTYPE html>
<html lang="en">
<head>
    {{>headerlinks}}
    <link rel="stylesheet" href="css/loginstyle.css">
</head>
<body>
  {{>navbar}}
  <div class = "errors">
  <ul >
     {{#each emailerror}}
  <li>{{this.message}}</li>
{{/each}}
    {{#each errors}}
  <li>{{this.message}}</li>
{{/each}}
  </ul>
  </div>
<form action="/register" method="POST" class="logform">
  <h1>Register</h1>
  
      <div class="email_btn">
        <input
          type="name"
          id="name"
          name="name"
          placeholder="Name"
          required
        />
      </div>

      <div class="email_btn">
        <input
         {{#if cssobj1.flag}}
          style ="border: {{cssobj1.color}}"
          {{/if}}
          
          {{!-- type="email" --}}
          id="email"
          name="email"
          placeholder="Email"
        ><label id = "datahide" style="font-size: 1rem">{{message}}</label>
      </div>
      <div  class ="email_btn">
        <input
      
          {{#if cssobj.flag}}
          style ="border: {{cssobj.color}}"
          {{/if}}
          type="password"
          id="password"
          name="password"
          placeholder="Password"
          required
        />
      </div>
      <div class="email_btn">
        <input
          type="password"
          id="password2"
          name="password2"
          placeholder="Confirm Password"
          required
        />
      </div>
      <div class ="submit">
        <input type="submit" value="Register" />
        
      </div>

      
    </form>
    {{>footer}}
    </body>
</html>